execute pathogen#infect()

" vim-airline
set t_Co=256
set laststatus=2
let g:airline_powerline_fonts=1

filetype plugin indent on

set encoding=utf-8

" tabs
set expandtab
set shiftwidth=4
set smartindent
set smarttab
set tabstop=4

" search
set ignorecase
set incsearch

" other
set showcmd
set wildmenu

" 80 char limit
"set colorcolumn=80
"highlight ColorColumn ctermbg=LightBlue

" Backup and Swap Files
set backupdir=$HOME/.vimbackup//
set directory=$HOME/.vimbackup//
